# Modules required for nekIBM-ascent
module use /soft/modulefiles
module load spack-pe-base cmake PrgEnv-gnu cray-python

FILE_PATH=$(readlink -f "${BASH_SOURCE[0]}")
NEKIBM_DIR=$(dirname "$FILE_PATH")
EXAMPLES_DIR=$(dirname "$NEKIBM_DIR")
ASCENT_TRAME_ROOT=$(dirname "$EXAMPLES_DIR")

source $ASCENT_TRAME_ROOT/scripts/build/python-venv/bin/activate
export NEK5000_HOME=$EXAMPLES_DIR/nekIBM-ascent
export PATH="$PATH:$EXAMPLES_DIR/nekIBM-ascent/bin"
